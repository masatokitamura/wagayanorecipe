<ul class="list-unstyled">
  <% posts.each do |post| %>
    <div class="card" style="width: 20rem;">
      <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
    <div class="card-body">
      <h4 class="card-title"><%= post.title %></h4>
    </div>
  </div>
    
  <% end %>
</ul>