<% if current_user.favpost?(post) %>
  <%= form_with(model: current_user.favorites.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= button_tag '<i class="fas fa-heart text-danger text-right h3 "></i>Unlike'.html_safe, :type => "submit", 
    :class =>"btn btn-default btn-s-md" %>
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>

    <%= button_tag '<i class="fas fa-heart text-light text-right h3 "></i>Like'.html_safe, :type => "submit", 
    :class =>"btn btn-default btn-s-md" %>
    <%= post.favorites.count %>
  <% end %>
<% end %>
